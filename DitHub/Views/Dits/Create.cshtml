@model DitHub.ViewModels.CreateViewModel
@{
    ViewBag.Title = "Create";
    ViewBag.Layout = "~Views/Shared/_Layout.cshtml";
}
<h1>Create</h1>

<form method="post" asp-action="Create" asp-controller="Dits">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="venue" placeholder="venue" asp-for="Venue">
        <label for="venue" class="form-label">Venue:</label>
        <span asp-validation-for="Venue" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="genre" class="form-label">Genre:</label>
        <select class="form-select form-control" id="genre" asp-for="Genre">
            <option selected class="text-opacity-50">Select a genre..</option>
            @foreach (var item in Model.Genres)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" for="date">Date:</label>
        <input type="text" class="form-control" id="date" asp-for="Date">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" for="time">Time:</label>
        <input type="text" class="form-control" id="time" asp-for="Time">
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script src="~/lib/bundle.js"></script>
}