#nullable disable
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-dark" title="Manage" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Hello @User.Identity?.Name
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Manage</a></li>
                    <li><a class="dropdown-item" href="#">Artists I'm following</a></li>
                    <li><a class="dropdown-item" href="#">Ditties I'm enjoying</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form class="dropdown-item form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
